{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always", { "omitLastInOneLineBlock": true}],
        "comma-dangle": ["error", "always-multiline"],
        "prefer-arrow-callback": "error"
    }
}
